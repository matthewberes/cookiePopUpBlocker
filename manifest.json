{
	"manifest_version": 3,
	"name": "Cookie Blocker",
	"description": "Lets you hide cookie popups",
	"version": "0.4",
	"icons": {"128": "icon_128.png"},
	"action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
        "matches" : [
            "https://*/*","http://*/*"
        ],
        "js" : [ "jquery-3.1.1.js",
            "content.js"
        ]
    }],
	"permissions": ["activeTab", "tabs", "scripting"],
	"background": {
		"service_worker": "background.js"
	}
}